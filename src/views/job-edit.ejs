<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include("parts/head-common") %>
    <link rel="stylesheet" href="/styles/partials/forms.css" />
    <link rel="stylesheet" href="/styles/partials/modal.css" />
    <link rel="stylesheet" href="/styles/pages/job.css" />

    <script src="/scripts/job-edit.js" type="module" defer></script>
  </head>
  <body id="page-job-edit">
    <%- include('parts/page-header', { title: "Editar Job" }) %>

    <div class="content-container flex animate-up delay-2">
      <main>
        <form action="/job/edit/<%= job.id %>" method="POST" id="form-job">
          <fieldset>
            <legend>Dados do Job</legend>
            <div class="separator light"></div>

            <div class="input-wrapper">
              <label for="name">Nome do Job</label>
              <input
                type="text"
                id="name"
                name="name"
                value="<%= job.name %>"
              />
            </div>

            <div class="input-group">
              <div class="input-wrapper">
                <label for="daily-hours"
                  >Quantas horas <br />
                  por dia vai dedicar ao Job?</label
                >
                <input type="number" step="0.1" id="daily-hours"
                name="daily-hours" value="<%= job["daily-hours"] %>" />
              </div>

              <div class="input-wrapper">
                <label for="total-hours"
                  >Estimativa de <br />
                  horas para esse Job?</label
                >
                <input type="number" id="total-hours" name="total-hours"
                value="<%= job["total-hours"] %>" />
              </div>
            </div>
          </fieldset>
        </form>
      </main>

      <aside class="card">
        <img src="/images/money-color.svg" alt="Pacote de dinheiro" />
        <p>
          O valor do projeto ficou em
          <strong><%= job.budget %></strong>
        </p>

        <div class="button-group">
          <button class="button green" form="form-job" type="submit">
            Salvar
          </button>
          <a href="#" class="button gray open-modal" title="Cancelar cadastro">
            <img src="/images/trash-24.svg" alt="" />
          </a>
        </div>
      </aside>
    </div>
    <!-- end container -->

    <%- include("parts/page-modal", { job }) %>
    <!-- action added by variable -->
  </body>
</html>
