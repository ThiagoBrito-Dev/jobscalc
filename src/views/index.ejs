<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include("parts/head-common") %>
    <link rel="stylesheet" href="/styles/partials/modal.css" />
    <link rel="stylesheet" href="/styles/pages/index.css" />

    <script src="/scripts/index.js" type="module" defer></script>
  </head>
  <body id="page-index">
    <header class="page-header">
      <div class="container">
        <section id="top" class="animate-up">
          <h2 class="sr-only">Homepage</h2>

          <img id="logo" src="/images/logo.svg" alt="Logo" />
          <span id="notification">
            <img src="/images/alert-octagon.svg" alt="Alerta" />
            <% if (freeHours <= 0) { %> Você não possui horas livres <% } else {
            %> Você tem <%= freeHours %> horas livres no seu dia <% } %>
          </span>
          <a href="/profile" id="avatar-profile">
            <p><%= profile.name %> <span>Ver perfil</span></p>
            <img src="<%= profile.avatar %> " alt="Thiago Brito" />
          </a>
        </section>

        <div class="separator"></div>

        <section id="summary" class="animate-up delay-1">
          <h2 class="sr-only">Sumário</h2>

          <div class="info">
            <p class="total">
              <strong><%= statusesCount.total %></strong>
              Projetos ao total
            </p>
            <p class="in-progress">
              <strong><%= statusesCount.progress %></strong>
              Em andamento
            </p>
            <p class="finished">
              <strong><%= statusesCount.done %></strong>
              Encerrados
            </p>
          </div>
          <a class="button orange" href="/job">
            <span>
              <img src="/images/plus-24.svg" alt="Novo Job" />
            </span>
            Adicionar novo job
          </a>
        </section>
      </div>
    </header>

    <main class="container">
      <section class="animate-up delay-2">
        <h1 class="sr-only">Trabalhos</h1>

        <div class="cards">
          <% jobs.forEach((job) => { %>
          <div class="card <%= job.status %>" data-id="<%= job.id %> ">
            <div class="id column"><%= job.id %></div>
            <div class="name column"><%= job.name %></div>
            <div class="deadline column">
              <span>Prazo</span>
              <p>
                <% if (job.hasLessThanOneDayToFinish) { %> <%= job.remainingTime
                %> <%= job.typeOfTimeRemaining %> para a entrega <% } else if
                (job.status == "progress") { %> <%= job.remainingTime %> <%=
                job.typeOfTimeRemaining %> para a entrega <% } else { %> Prazo
                encerrado <% } %>
              </p>
            </div>
            <div class="amount column">
              <span>Valor</span>
              <p><%= job.budget %></p>
            </div>
            <div class="status badge column">
              <%= job.status == "done" ? "Encerrado" : "Em andamento" %>
            </div>
            <div class="actions column flex">
              <p class="sr-only">Ações</p>
              <a
                href="/job/edit/<%= job.id %> "
                class="button white edit"
                title="Editar Job"
              >
                <img src="/images/edit-24.svg" alt="Editar Job" />
              </a>
              <button class="delete button white" title="Excluir Job">
                <img src="/images/trash-24.svg" alt="Excluir Job" />
              </button>
            </div>
          </div>
          <% }) %>
        </div>
        <!-- end cards -->
      </section>
    </main>
    <!-- end container -->

    <%- include("parts/page-modal", { job: "" }) %>
    <!-- action added by script -->
  </body>
</html>
